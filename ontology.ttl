@base <http://example.com/ns#> .
@prefix nifi: <https://w3id.org/conn/nifi#> .
@prefix : <https://w3id.org/conn#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

    <LdesClient> a <NifiProcess>;
      :processProperties [
        nifi:type "be.vlaanderen.informatievlaanderen.ldes.processors.LdesClient";
      ];
      :shape [
        a sh:NodeShape;
        sh:targetClass <LdesClient>;
        sh:property [
          sh:class :ReaderChannel;
          sh:path <INCOMING_CHANNEL>;
          sh:name "Incoming channel";
          sh:description "Combination of all incoming channels";
        ];
         sh:property [
          sh:class :WriterChannel;
          sh:path <data>;
          nifi:key "data";
          sh:name "data";
          sh:description "Posts LDES members to the remote URL";];

    sh:property [
          sh:datatype xsd:string;
          sh:path <data-source-url>;
          sh:name "Data source url";
          sh:description "Url to data source";
          sh:minCount 1;
          nifi:key "DATA_SOURCE_URL"; ] ;
    sh:property [
          sh:datatype xsd:string;
          sh:path <data-source-format>;
          sh:name "Data source format";
          sh:description "RDF format identifier of the data source";
          sh:minCount 0;
          nifi:key "DATA_SOURCE_FORMAT"; sh:defaultValue "JSONLD11";] ;
    sh:property [
          sh:datatype xsd:string;
          sh:path <data-destination-format>;
          sh:name "Data destination format";
          sh:description "RDF format identifier of the data destination";
          sh:minCount 0;
          nifi:key "DATA_DESTINATION_FORMAT"; sh:defaultValue "n-quads";] ;
    sh:property [
          sh:datatype xsd:string;
          sh:path <fragment-expiration-interval>;
          sh:name "Fragment expiration interval";
          sh:description "The number of seconds to expire a mutable fragment when the Cache-control header contains no max-age value";
          sh:minCount 0;
          nifi:key "FRAGMENT_EXPIRATION_INTERVAL"; sh:defaultValue "604800";] ;] .
